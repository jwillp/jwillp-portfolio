{% extends 'default.html.twig' %}
{# theme_url ~ "/dist/images/" ~ page.header.hero.image #}
{% block content %}

    {% set default_header_image = theme_url ~ "/dist/images/forest_2.jpg" %}

    <div class="halfscreen-hero" style="background-image: url({{ header_image|defined(default_header_image) }})">
        <div class="hero-content">
            <h1>{{ page.title }}</h1>
        </div>
    </div>
    <div id="page-wrapper" >
        {% block page_content %}
            {{ page.content }}
        {% endblock page_content %}
    </div>
{% endblock %}