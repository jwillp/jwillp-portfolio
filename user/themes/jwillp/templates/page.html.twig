{% extends 'default.html.twig' %}
{# theme_url ~ "/dist/images/" ~ page.header.hero.image #}
{% block content %}

    <div class="halfscreen-hero" style="background-image: url({{ header_image }})">
        <div class="hero-content">
            <h1>{{ page.title }}</h1>

            <h3>{{ page_subtitle }}</h3>
        </div>
    </div>
    <div id="page-wrapper" >
        {% block page_content %}
            {{ page.content }}
        {% endblock page_content %}
    </div>
{% endblock %}